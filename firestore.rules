rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // TEMPORARY: Allow all reads/writes so the dashboard works during development
    match /{document=**} {
      allow read, write: if true;
    }

    // Keep your Lead collection group rule but make it public for now
    match /{path=**}/leads/{leadId} {
      allow list, get: if true;
    }
    
    // Keep your log rule but make it public for now
    match /logs/{logId} {
      allow list, get, create: if true;
    }
  }
}